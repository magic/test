{
  "name": "test",
  "version": "0.0.1",
  "description": "declarative testing library",
  "main": "src/index.js",
  "scripts": {
    "start": "nyc -a node test/",
    "test": "VERBOSE=true nyc -a node test/",
    "test:multirun": "VERBOSE=true RUNS=10 node test/",
    "format": "prettier --write '{src,test}/**/*.js'",
    "format:check": "prettier --list-different '{src,test}/**/*.js'"
  },
  "author": "Jascha Ehrenreich <jascha@jaeh.at>",
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "prettier": "1.11.1"
  }
}
